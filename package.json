{
    "name": "topolar_textbook_editor",
    "version": "0.14.2",
    "main": "electron/electron.js",
    "homepage": "./",
    "scripts": {
        "postinstall": "patch-package",
        "dev": "vite --mode development",
        "build": "vite build --mode production",
        "preview": "vite preview",
        "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
        "electron:pack": "yarn build && electron-builder build -c.extraMetadata.main=electron/electron.js",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"electron .\"",
        "electron:builder": "electron-builder",
        "build:for:electron": "cross-env ELECTRON=true vite build --mode production",
        "app:build": "yarn build:for:electron && yarn electron:builder",
        "deploy": "electron-builder --win --x64",
        "deploy:mac": "electron-builder --mac"
    },
    "dependencies": {
        "@formkit/auto-animate": "^1.0.0-beta.5",
        "@nextui-org/react": "^1.0.0-beta.12",
        "@stitches/react": "^1.2.8",
        "@testing-library/react": "^13.3.0",
        "ace-builds": "^1.14.0",
        "axios": "^1.2.3",
        "classnames": "^2.3.2",
        "electron-is-dev": "^2.0.0",
        "electron-log": "^4.4.8",
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "env-cmd": "^10.1.0",
        "events": "^3.3.0",
        "jquery": "^3.6.3",
        "jszip": "^3.10.1",
        "patch-package": "^6.5.1",
        "prop-types": "^15.8.1",
        "quill-image-compress": "^1.2.27",
        "react": "^18.2.0",
        "react-ace": "^10.1.0",
        "react-aria": "^3.22.0",
        "react-beautiful-dnd": "^13.1.1",
        "react-confirm-alert": "^3.0.6",
        "react-dom": "^18.2.0",
        "react-html-parser": "^2.0.2",
        "react-icons": "^4.7.1",
        "react-loader-spinner": "^5.3.4",
        "react-markdown": "^8.0.5",
        "react-player": "^2.11.0",
        "react-quill": "^2.0.0",
        "react-syntax-highlighter": "^15.5.0",
        "react-toastify": "^9.1.1",
        "react-transition-group": "^4.4.5",
        "reactstrap": "^9.1.5",
        "recoil": "^0.7.6",
        "rehype-raw": "^6.1.1",
        "remark-gfm": "^3.0.1",
        "sass": "^1.57.1",
        "sass-loader": "^13.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@vitejs/plugin-react": "^3.0.1",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^22.0.2",
        "electron-builder": "^23.6.0",
        "postinstall-postinstall": "^2.1.0",
        "vite": "^4.0.4",
        "wait-on": "^7.0.1"
    },
    "build": {
        "productName": "topolar_textbook_editor",
        "appId": "com.electron.topolartextbookeditor",
        "asar": true,
        "extends": null,
        "protocols": {
            "name": "topolar_textbook_editor",
            "schemes": [
                "topolar_textbook_editor"
            ]
        },
        "publish": [
            {
                "provider": "github",
                "owner": "pressogh",
                "repo": "topolar_textbook_editor"
            }
        ],
        "win": {
            "target": [
                "zip",
                "nsis"
            ],
            "icon": "./resources/installer/Icon.ico"
        },
        "nsis": {
            "oneClick": true
        },
        "directories": {
            "buildResources": "./resources/installer/",
            "output": "./dist/",
            "app": "."
        }
    }
}
