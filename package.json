{
    "name": "topolar_textbook_editor",
    "version": "0.10.2",
    "main": "electron/electron.js",
    "homepage": "./",
    "scripts": {
        "dev": "vite --mode development",
        "build": "vite build --mode production",
        "preview": "vite preview",
        "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
        "electron:pack": "yarn build && electron-builder build -c.extraMetadata.main=electron/electron.js",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"electron .\"",
        "electron:builder": "electron-builder",
        "build:for:electron": "cross-env ELECTRON=true vite build --mode production",
        "app:build": "yarn build:for:electron && yarn electron:builder",
        "deploy": "electron-builder --win --x64",
        "deploy:mac": "electron-builder --mac"
    },
    "dependencies": {
        "@formkit/auto-animate": "^1.0.0-beta.1",
        "@nextui-org/react": "^1.0.0-beta.10",
        "@stitches/react": "^1.2.8",
        "@testing-library/react": "^13.3.0",
        "ace-builds": "^1.5.3",
        "axios": "^0.27.2",
        "classnames": "^2.3.1",
        "electron-is-dev": "^2.0.0",
        "electron-log": "^4.4.7",
        "electron-store": "^8.0.1",
        "electron-updater": "^5.0.1",
        "env-cmd": "^10.1.0",
        "events": "^3.3.0",
        "jquery": "^3.6.1",
        "jszip": "^3.10.1",
        "patch-package": "^6.4.7",
        "prop-types": "^15.8.1",
        "react": "^18.0.0",
        "react-ace": "^10.1.0",
        "react-aria": "^3.18.0",
        "react-beautiful-dnd": "^13.1.0",
        "react-confirm-alert": "^3.0.6",
        "react-dom": "^18.0.0",
        "react-html-parser": "^2.0.2",
        "react-icons": "^4.4.0",
        "react-markdown": "^8.0.3",
        "react-player": "^2.10.1",
        "react-quill": "^1.3.5",
        "react-syntax-highlighter": "^15.5.0",
        "react-transition-group": "^4.4.2",
        "reactstrap": "^9.0.3",
        "recoil": "^0.7.4",
        "rehype-raw": "^6.1.1",
        "remark-gfm": "^3.0.1",
        "sass": "^1.52.2",
        "sass-loader": "^13.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@vitejs/plugin-react": "^1.3.0",
        "concurrently": "^7.2.1",
        "cross-env": "^7.0.3",
        "electron": "^19.0.8",
        "electron-builder": "23.0.3",
        "vite": "^3.0.4",
        "wait-on": "^6.0.1"
    },
    "build": {
        "productName": "topolar_textbook_editor",
        "appId": "com.electron.topolartextbookeditor",
        "asar": true,
        "extends": null,
        "protocols": {
            "name": "topolar_textbook_editor",
            "schemes": [
                "topolar_textbook_editor"
            ]
        },
        "publish": [
            {
                "provider": "github",
                "owner": "pressogh",
                "repo": "topolar_textbook_editor"
            }
        ],
        "win": {
            "target": [
                "zip",
                "nsis"
            ],
            "icon": "./resources/installer/Icon.ico"
        },
        "nsis": {
            "oneClick": true
        },
        "directories": {
            "buildResources": "./resources/installer/",
            "output": "./dist/",
            "app": "."
        }
    }
}
